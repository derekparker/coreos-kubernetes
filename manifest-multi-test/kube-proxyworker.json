{
	"apiVersion": "extensions/v1beta1",
	"kind": "DaemonSet",
	"metadata": {
		"name": "kube-proxy-worker",
		"namespace": "kube-system",
		"labels": {
			"name": "kube-proxy",
			"version": "1.2.0-beta.0-aaron0"
		}
	},
	"spec": {
		"template": {
			"metadata": {
				"labels": {
					"app": "kube-proxy-worker"
				}
			},
			"spec": {
				"nodeSelector": {
					"type": "worker"
				},
				"hostNetwork": true,
				"containers": [{
					"name": "kube-proxy-worker",
					"image": "quay.io/peanutbutter/hyperkube:v1.2.0-beta.0-aaron0",
					"command": [
						"./hyperkube",
						"proxy",
						"--v=4",
						"--master=https://172.17.4.101:6443",
						"--kubeconfig=/etc/kubernetes/worker-kubeconfig.yaml"
					],
					"securityContext": {
						"privileged": true
					},
					"volumeMounts": [
						{
							"mountPath": "/etc/ssl/certs",
							"name": "ssl-certs-host",
							"readOnly": true
						},
						{
							"mountPath": "/etc/kubernetes",
							"name": "etc-kube",
							"readOnly": true
						}
					]
				}],
				"volumes": [
					{
						"name": "ssl-certs-host",
						"hostPath": {
							"path": "/etc/ssl/certs"
						}
					},
					{
						"name": "etc-kube",
						"hostPath": {
							"path": "/etc/kubernetes"
						}
					}
				]
			}
		}
	}
}
